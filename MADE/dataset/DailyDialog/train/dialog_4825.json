{
  "id": "dialog_4825",
  "segments": [
    {
      "text": "Excuse me , sir . Can I help you ?",
      "speaker": "S1",
      "predicted_emotion": "neutral",
      "utterance_id": 0,
      "dialog_act": 3
    },
    {
      "text": "I'd be glad to have your help . Could you make the air-conditioner cooler ?",
      "speaker": "S2",
      "predicted_emotion": "neutral",
      "utterance_id": 1,
      "dialog_act": 3
    },
    {
      "text": "I'm sorry . We can not regulate the air-conditioner . As soon as the plane takes off we'll be able to get better ventilation , and the temperature here will drop . Let me get a wet towel for you at the moment .",
      "speaker": "S1",
      "predicted_emotion": "neutral",
      "utterance_id": 2,
      "dialog_act": 3
    },
    {
      "text": "Good idea .",
      "speaker": "S2",
      "predicted_emotion": "neutral",
      "utterance_id": 3,
      "dialog_act": 4
    },
    {
      "text": "Your wet towel , sir .",
      "speaker": "S1",
      "predicted_emotion": "neutral",
      "utterance_id": 4,
      "dialog_act": 1
    },
    {
      "text": "Thank you . Could I have something cold to drink ?",
      "speaker": "S2",
      "predicted_emotion": "neutral",
      "utterance_id": 5,
      "dialog_act": 3
    },
    {
      "text": "Yes . We have mineral water , orange juice , coke , which do you prefer ?",
      "speaker": "S1",
      "predicted_emotion": "neutral",
      "utterance_id": 6,
      "dialog_act": 2
    },
    {
      "text": "Orange juice , please .",
      "speaker": "S2",
      "predicted_emotion": "neutral",
      "utterance_id": 7,
      "dialog_act": 1
    },
    {
      "text": "Would you like some ice in your drink ?",
      "speaker": "S1",
      "predicted_emotion": "neutral",
      "utterance_id": 8,
      "dialog_act": 3
    },
    {
      "text": "Yes .",
      "speaker": "S2",
      "predicted_emotion": "neutral",
      "utterance_id": 9,
      "dialog_act": 4
    },
    {
      "text": "How much would you like ?",
      "speaker": "S1",
      "predicted_emotion": "neutral",
      "utterance_id": 10,
      "dialog_act": 2
    },
    {
      "text": "One or two cubes will be OK .",
      "speaker": "S2",
      "predicted_emotion": "neutral",
      "utterance_id": 11,
      "dialog_act": 1
    },
    {
      "text": "Here you are , sir .",
      "speaker": "S1",
      "predicted_emotion": "neutral",
      "utterance_id": 12,
      "dialog_act": 3
    },
    {
      "text": "I'm awfully sorry to have bothered you .",
      "speaker": "S2",
      "predicted_emotion": "happy",
      "utterance_id": 13,
      "dialog_act": 4
    },
    {
      "text": "It's my pleasure .",
      "speaker": "S1",
      "predicted_emotion": "happy",
      "utterance_id": 14,
      "dialog_act": 1
    },
    {
      "text": "Please accept this tip .",
      "speaker": "S2",
      "predicted_emotion": "happy",
      "utterance_id": 15,
      "dialog_act": 3
    }
  ]
}